<?xml version="1.0" encoding="UTF-8"?>

<a:view xmlns:a="http://www.example.org/annotations">

	<a:template id="entityPage">

		<ui:composition xmlns="http://www.w3.org/1999/xhtml" xmlns:ui="http://java.sun.com/jsf/facelets"
			xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html" template="layout/template.xhtml">

			<ui:define name="body">
				<a:message attribute="value" />
				<h:outputText value="welcome" />
				<hr />
				<a:placeHolder for="entityForm" />
				<a:placeHolder for="entityListForm" />
			</ui:define>

		</ui:composition>

	</a:template>

	<a:template id="entityForm" xmlns="http://www.w3.org/1999/xhtml" xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html">

		<h:form>
			<table>
				<a:placeHolder for="input" />
			</table>
			<a:expression type="save" for="action" />
			<a:message attribute="value" />
			<h:commandButton value="save" />
		</h:form>
	</a:template>

	<a:template id="entityListForm" xmlns="http://www.w3.org/1999/xhtml" xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html">

		<hr />
		<a:message attribute="value" />
		<a:expression type="add" for="action" />
		<h:commandLink value="add" />

		<a:variable attribute="var" />
		<a:expression type="entityField" for="value" />
		<ui:repeat var="item">
			<a:message attribute="value" />
			<a:expression type="remove" for="action" />
			<h:commandLink value="remove" />
			<a:placeHolder for="entityForm" />
		</ui:repeat>
	</a:template>

	<a:template id="entityListPage" xmlns="http://www.w3.org/1999/xhtml" xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html">
	</a:template>

	<a:template id="input" name="table row multiline input" xmlns="http://www.w3.org/1999/xhtml" xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html">

		<tr>
			<td>
				<a:expression type="entityFieldName" for="value" />
				<h:outputText />
			</td>
			<td>
				<a:expression type="entityField" for="value" />
				<h:inputText cols="5" />
			</td>
		</tr>

	</a:template>

	<a:template id="input" name="table row input" xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html">

		<tr>
			<td>
				<a:expression type="entityFieldName" for="value" />
				<h:outputText />
			</td>
			<td>
				<a:expression type="entityField" for="value" />
				<h:inputText />
			</td>
		</tr>

	</a:template>

</a:view>