<?xml version="1.0" encoding="UTF-8"?>

<a:view xmlns:a="http://www.jsfgen.com/annotations" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jsfgen.com/annotations annotations.xsd">

	<a:template id="entityPage">

		<ui:composition xmlns="http://www.w3.org/1999/xhtml"
			xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
			xmlns:h="http://java.sun.com/jsf/html" template="layout/template.xhtml">

			<a:placeHolder for="entityForm" />
			<a:placeHolder for="entityListForm" />

		</ui:composition>

	</a:template>

	<a:template id="entityForm" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<h:form>
			<a:placeHolder for="actionBar" />
			<a:placeHolder for="input" />
		</h:form>
	</a:template>

	<a:template id="entityListForm" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<h:form>
			<a:placeHolder for="actionBar" />

			<a:variable attribute="var" />
			<a:expression type="entityField" for="value" />
			<ui:repeat var="item">
				<a:placeHolder for="actionBar" />
				<a:placeHolder for="input" />
			</ui:repeat>

		</h:form>
	</a:template>

	<a:template id="entityListPage" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<ui:composition xmlns="http://www.w3.org/1999/xhtml"
			xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
			xmlns:h="http://java.sun.com/jsf/html" template="layout/template.xhtml">

			<a:placeHolder for="actionBar" />

			<table>
				<th>
					<a:placeHolder for="columnHeader" />
				</th>

				<a:variable attribute="var" />
				<a:expression type="resultSet" for="value" />
				<ui:repeat var="item">
					<tr>
						<a:placeHolder for="columnData" />
					</tr>
				</ui:repeat>
			</table>

		</ui:composition>

	</a:template>

	<a:template id="columnData" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<td>
			<a:expression type="entityField" for="value" />
			<h:outputText />
		</td>

	</a:template>

	<a:template id="columnHeader" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<td>
			<a:expression type="entityFieldName" for="value" />
			<h:outputText />
		</td>

	</a:template>

	<a:template id="columnAction" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<td>
			<a:placeHolder for="action" />
		</td>

	</a:template>


	<a:template id="collectionColumn" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<td>
			<ul>
				<a:variable attribute="var" />
				<a:expression type="entityField" for="value" />
				<ui:repeat var="item">
					<a:placeHolder for="collectionColumnData" />
				</ui:repeat>
			</ul>
		</td>

	</a:template>

	<a:template id="collectionColumnData" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">

		<li>
			<a:expression type="entityField" for="value" />
			<h:outputText />
		</li>

	</a:template>


	<a:template id="actionBar" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html">
		<a:placeHolder for="action" />
	</a:template>

	<a:template id="input" name="table row input" xmlns="http://www.w3.org/1999/xhtml"
		xmlns:h="http://java.sun.com/jsf/html">

		<tr>
			<td>
				<a:expression type="entityFieldName" for="value" />
				<h:outputText />
			</td>
			<td>
				<a:expression type="entityField" for="value" />
				<h:inputText />
			</td>
		</tr>

	</a:template>

</a:view>